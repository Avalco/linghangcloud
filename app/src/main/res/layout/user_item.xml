<?xml version="1.0" encoding="utf-8"?>
<com.linghangcloud.android.UiComponent.TaskItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginBottom="4dp"
        android:id="@+id/content"
        android:background="@drawable/home_tasks_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/image"
            android:src="@drawable/testimg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/nickname"
            android:layout_marginLeft="8dp"
            android:textColor="#646464" />

        <TextView
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:id="@+id/account"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#646464" />

        <TextView
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:id="@+id/classn"
            android:layout_height="wrap_content"
            android:text="计科1801"
            android:textColor="#646464" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/modify"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:layout_height="30dp"
            android:textSize="12sp"
            android:background="@drawable/home_modif_back"
            android:gravity="center"
            android:text="修改权限" />
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_height="30dp"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:background="@drawable/home_delete_back"
            android:gravity="center"
            android:text="删除成员" />
    </LinearLayout>
</com.linghangcloud.android.UiComponent.TaskItemLayout>